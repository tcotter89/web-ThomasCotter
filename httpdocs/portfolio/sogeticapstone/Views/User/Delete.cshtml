                 @Html.DisplayNameFor(model => model.additionalInfo)
            </div>
            <div class="form-line display">
                @Html.DisplayFor(model => model.additionalInfo)
            </div>
            <div class="grower">
                @using (Html.BeginForm()) {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Delete" class="btn btn-large btn-primary right-spacing-small" />
                    <input type="button" value="Cancel" class="btn btn-large btn-primary" onclick="@("location.href='" + Url.Action("Details", "User", new { id = Model.userID }) + "'")" />
                }
            </div>
        </fieldset> <!-- form-generic-column -->
    </div> <!-- /form-generic -->
</div> <!-- container -->
